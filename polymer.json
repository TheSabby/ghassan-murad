{
  "entrypoint": "index.html",
  "shell": "src/app-shell.html",
  "fragments": [
    "src/projects-view.html",
    "src/clients-view.html",
    "src/offers-view.html",
    "src/careers-view.html",
    "src/contact-view.html",
    "src/not-found-view.html"
  ],
  "sources": [
    "src/**/*",
    "projects/**/*",
    "images/**/*",
    "fonts/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "js/projects.js",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
